<%= form_with(model: product, local: true) do |form | %>
  <div class="field"> %>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :value %>
    <%= form.text_field :value %>
  </div>

  <div class="field">
    <%= form.label :restaurant %>
    <%= form.collection_select(:restaurant_id, Restaurant.order(:name), :id, :name, include_clank: true) %>
 </div>

  <div class="field">
    <%= form.submit %>
  </div>
<% end %>